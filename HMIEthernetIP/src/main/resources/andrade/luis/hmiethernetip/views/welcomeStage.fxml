<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="200" prefWidth="200" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <VBox minWidth="-Infinity" prefHeight="200.0" prefWidth="300.0">
                    <children>
                        <Label text="LibreHMI" textAlignment="CENTER">
                            <font>
                                <Font name="Arial Bold" size="40.0" />
                            </font>
                        </Label>
                        <Label layoutX="38.0" layoutY="44.0" text="Iniciar" />
                        <VBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="newProjectButton" mnemonicParsing="false" text="Nuevo" />
                                <Button fx:id="loadProjectButton" mnemonicParsing="false" prefHeight="24.0" prefWidth="59.0" text="Abrir" />
                            </children>
                        </VBox>
                        <Label text="Recientes" />
                        <ListView fx:id="recentUsedFilesListView" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                </VBox>
                <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                    </children></VBox>
            </children>
        </HBox>
    </children>
</StackPane>
